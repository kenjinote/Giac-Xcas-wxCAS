A:= point(-0.795-1.2*i); 
B:= point(1.89-1.68*i);
C:= point(0.722+1.9*i);
a1:=(angle(A,B,C))/3;  
b1:=(angle(B,C,A))/3;  
c1:=eval(pi/3-a1-b1); M:=inter(rotation(A,a1,droite(A,B)),rotation(B,-2*b1,droite(B,A)))[0];  
N:=inter(rotation(A,a1+pi/3,droite(A,B)),rotation(B,-2*b1+pi/3,droite(B,A)))[0];  A1:=rotation(M,pi/3,A);  
N1:=rotation(M,pi/3,N);
triangle(M,A,A1);
triangle(M,N,N1);
segment(A,N);
segment(A1,N1);