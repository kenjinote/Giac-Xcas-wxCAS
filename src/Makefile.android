LDFLAGS = -L/usr/local/android-ndk-r6b/platforms/android-9/arch-arm/usr/lib 
LIBS = 
STATLIBS = 
DYNLIBS =  
# For windows: remove -ldl in LIBS above and uncomment WLIBS below, + -DWIN32
