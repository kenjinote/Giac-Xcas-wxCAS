libgiac.so:	$(GIACOBJS)
	$(CXX) -shared $(GIACOBJS) -nostdlib -Wl,-soname -Wl,libgiac.so.0 -o libgiac.so.0.0.0 && ln -sf libgiac.so.0.0.0 libgiac.so.0 && ln -sf libgiac.so.0.0.0 libgiac.so
libgiac.a:	$(GIACOBJS)
	$(AR) cru libgiac.a $(GIACOBJS) 
	$(RANLIB) libgiac.a
.cc.o:
	$(CXX) $(CXXFLAGS) -c $<
.c.o:
	$(CXX) $(CXXFLAGS) -c $<
clean:
	rm -f $(OBJS)

